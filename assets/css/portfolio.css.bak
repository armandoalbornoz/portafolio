/* Animated Gradient Background */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
    background: 
        radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(236, 72, 153, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
    animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

/* Grid overlay */
body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-image: 
        linear-gradient(rgba(139, 92, 246, 0.015) 1px, transparent 1px),
        linear-gradient(90deg, rgba(139, 92, 246, 0.015) 1px, transparent 1px);
    background-size: 100px 100px;
    animation: gridMove 20s linear infinite;
}

@keyframes gridMove {
    0% {
        transform: translate(0, 0);
    }
    100% {
        transform: translate(100px, 100px);
    }
}

/* Scanline effect */
#canvas-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
        0deg,
        rgba(139, 92, 246, 0.01) 0px,
        transparent 2px,
        transparent 4px
    );
    pointer-events: none;
    animation: scanlines 8s linear infinite;
}

@keyframes scanlines {
    0% {
        transform: translateY(0);
    }
    100% {
        transform: translateY(50px);
    }
}

.cursor {
    width: 20px;
    height: 20px;
    border: 2px solid var(--primary-color);
    border-radius: 50%;
    position: fixed;
    pointer-events: none;
    z-index: 9999;
    transition: all 0.1s ease;
    transform: translate(-50%, -50%);
}

.cursor-follower {
    width: 8px;
    height: 8px;
    background: var(--primary-color);
    border-radius: 50%;
    position: fixed;
    pointer-events: none;
    z-index: 9999;
    transition: all 0.15s ease;
    transform: translate(-50%, -50%);
}

#canvas-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.content-wrapper {
    position: relative;
    z-index: 1;
}

nav {
    position: fixed;
    top: 0;
    width: 100%;
    padding: 30px 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    background: transparent;
    transition: background 0.3s ease, backdrop-filter 0.3s ease;
}

nav.scrolled {
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(139, 92, 246, 0.2);
}

.logo {
    font-size: 18px;
    font-weight: 600;
    letter-spacing: -0.5px;
}

.nav-menu {
    display: flex;
    gap: 40px;
    list-style: none;
}

.nav-menu a {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: opacity 0.3s;
}

.nav-menu a:hover {
    opacity: 0.6;
}

.hero {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 60px;
    padding-top: 100px;
    position: relative;
}

.hero-title {
    font-size: clamp(3rem, 12vw, 10rem);
    font-weight: 800;
    line-height: 0.9;
    text-align: center;
    margin-bottom: 30px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
}

.hero-subtitle {
    font-size: clamp(1.5rem, 4vw, 3rem);
    font-weight: 300;
    text-align: center;
    margin-bottom: 40px;
    opacity: 0;
    animation: fadeInUp 1s ease 0.2s forwards;
}

.hero-roles {
    display: flex;
    flex-direction: column;
    gap: 15px;
    text-align: center;
    opacity: 0;
    animation: fadeInUp 1s ease 0.4s forwards;
    margin-bottom: 30px;
}

.role {
    font-size: clamp(0.9rem, 2vw, 1.2rem);
    font-weight: 300;
    color: var(--text-secondary);
    letter-spacing: 2px;
}

.scroll-indicator {
    opacity: 0;
    animation: fadeInUp 1s ease 0.8s forwards;
    text-align: center;
    margin-top: 60px;
}

.scroll-text {
    font-size: 12px;
    color: var(--text-secondary);
    margin-bottom: 15px;
    letter-spacing: 2px;
}

.scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, var(--primary-color), transparent);
    margin: 0 auto;
    animation: scrollLine 2s ease-in-out infinite;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes scrollLine {
    0%, 100% {
        transform: scaleY(0);
        transform-origin: top;
    }
    50% {
        transform: scaleY(1);
        transform-origin: top;
    }
}

.about-section {
    min-height: 100vh;
    padding: 120px 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateY(100px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.about-section.visible {
    opacity: 1;
    transform: translateY(0);
}

.about-content {
    max-width: 1200px;
}

.section-label {
    font-size: 14px;
    color: var(--text-secondary);
    letter-spacing: 3px;
    margin-bottom: 40px;
    display: block;
    text-align: center;
}

.about-text {
    font-size: clamp(2rem, 4vw, 4rem);
    font-weight: 300;
    line-height: 1.4;
    margin-bottom: 60px;
}

.highlight {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 600;
}

.about-description {
    font-size: 18px;
    line-height: 1.8;
    color: var(--text-secondary);
    max-width: 900px;
    margin-bottom: 30px;
}

.stars {
    display: inline-block;
    color: var(--primary-color);
    font-size: 24px;
    margin: 0 10px;
}

.education-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 40px;
}

.education-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 30px;
}

.education-card h3 {
    font-size: 1.5rem;
    color: var(--primary-color);
    margin-bottom: 10px;
}

.education-card .degree {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 10px;
}

.education-card .date {
    font-size: 0.9rem;
    color: var(--text-secondary);
}

/* Skills Section */
.skills-section {
    padding: 120px 60px;
    min-height: 100vh;
    opacity: 0;
    transform: translateX(100px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.skills-section.visible {
    opacity: 1;
    transform: translateX(0);
}

.skills-container {
    max-width: 1200px;
    margin: 80px auto 0;
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
}

.skill-category {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    padding: 35px;
    transition: all 0.4s ease;
}

.skill-category:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    background: rgba(255, 255, 255, 0.03);
    box-shadow: 0 10px 40px rgba(139, 92, 246, 0.2);
}

.skill-category-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.skill-icon {
    width: 24px;
    height: 24px;
}

.skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.skill-tag {
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    color: var(--text-primary);
    transition: all 0.3s ease;
}

.skill-tag:hover {
    background: rgba(139, 92, 246, 0.2);
    border-color: var(--primary-color);
    transform: translateY(-2px);
}

/* Experience Section */
.experience-section {
    padding: 120px 60px;
    min-height: 100vh;
    opacity: 0;
    transform: translateX(-100px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.experience-section.visible {
    opacity: 1;
    transform: translateX(0);
}

.experience-grid {
    display: grid;
    gap: 60px;
    margin-top: 80px;
}

.experience-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 24px;
    padding: 40px;
    margin-bottom: 60px;
    transition: all 0.4s ease;
}

.experience-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
    background: rgba(255, 255, 255, 0.03);
}

.experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 25px;
    flex-wrap: wrap;
    gap: 20px;
}

.experience-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: 10px;
    color: var(--primary-color);
}

.experience-company {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text-primary);
}

.experience-date {
    font-size: 0.95rem;
    color: var(--text-secondary);
    white-space: nowrap;
}

.experience-description {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.6;
}

.experience-description p {
    margin-bottom: 15px;
}

.experience-description ul {
    list-style: none;
    padding: 0;
    margin-top: 15px;
}

.experience-description li {
    padding-left: 25px;
    position: relative;
    margin-bottom: 12px;
    line-height: 1.6;
}

.experience-description li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
}

/* Projects Section */
.projects-section {
    padding: 120px 60px;
    min-height: 100vh;
    opacity: 0;
    transform: translateX(100px);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.projects-section.visible {
    opacity: 1;
    transform: translateX(0);
}

.projects-grid {
    display: grid;
    gap: 60px;
    margin-top: 80px;
}

.project-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 24px;
    padding: 40px;
    margin-bottom: 60px;
    transition: all 0.4s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    opacity: 0;
    transition: opacity 0.4s ease;
}

.project-card:hover::before {
    opacity: 0.1;
}

.project-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary-color);
}

.project-content {
    position: relative;
    z-index: 1;
}

.project-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
}

.project-tags {
    font-size: 14px;
    color: var(--text-secondary);
    letter-spacing: 1px;
    margin-bottom: 20px;
}

.project-description {
    font-size: 16px;
    color: var(--text-secondary);
    line-height: 1.6;
}

.project-description ul {
    list-style: none;
    padding: 0;
    margin-top: 15px;
}

.project-description li {
    padding-left: 20px;
    position: relative;
    margin-bottom: 10px;
}

.project-description li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: var(--primary-color);
}

.project-actions {
    display: flex;
    gap: 15px;
    margin-top: 25px;
    flex-wrap: wrap;
}

.project-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid var(--primary-color);
    border-radius: 8px;
    color: var(--text-primary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.project-btn:hover {
    background: var(--primary-color);
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(139, 92, 246, 0.4);
}

.project-btn svg {
    width: 16px;
    height: 16px;
}

/* Coming Soon Modal */
.modal {
    display: none;
    position: fixed;
    z-index: 10000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    animation: fadeIn 0.3s ease;
}

.modal.active {
    display: flex;
    justify-content: center;
    align-items: center;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.modal-content {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 24px;
    padding: 60px;
    max-width: 600px;
    text-align: center;
    position: relative;
    animation: slideUp 0.4s ease;
}

@keyframes slideUp {
    from {
        transform: translateY(50px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-close {
    position: absolute;
    top: 20px;
    right: 20px;
    background: none;
    border: none;
    color: var(--text-secondary);
    font-size: 28px;
    cursor: pointer;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s ease;
}

.modal-close:hover {
    background: rgba(139, 92, 246, 0.2);
    color: var(--primary-color);
    transform: rotate(90deg);
}

.modal-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 30px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.7);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0 0 0 20px rgba(139, 92, 246, 0);
    }
}

.modal-icon svg {
    width: 40px;
    height: 40px;
    stroke: white;
}

.modal-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.modal-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 40px;
}

.modal-btn {
    display: inline-block;
    padding: 15px 40px;
    background: var(--primary-color);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
}

.modal-btn:hover {
    background: var(--secondary-color);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
}

.contact-section {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 120px 60px;
    text-align: center;
    opacity: 0;
    transform: scale(0.9);
    transition: opacity 0.8s ease, transform 0.8s ease;
}

.contact-section.visible {
    opacity: 1;
    transform: scale(1);
}

.contact-title {
    font-size: clamp(2.5rem, 6vw, 6rem);
    font-weight: 700;
    margin-bottom: 40px;
    line-height: 1.2;
}

.contact-description {
    font-size: 18px;
    color: var(--text-secondary);
    max-width: 600px;
    margin-bottom: 60px;
    line-height: 1.6;
}

.contact-links {
    display: flex;
    flex-direction: column;
    gap: 30px;
    align-items: center;
}

.contact-row {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
    justify-content: center;
}

.contact-link {
    font-size: 18px;
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 12px 24px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    cursor: pointer;
}

.contact-link:hover {
    background: rgba(139, 92, 246, 0.2);
    border-color: var(--primary-color);
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(139, 92, 246, 0.3);
}

.contact-link .contact-icon {
    width: 24px;
    height: 24px;
    transition: all 0.3s;
}

.contact-link:hover .contact-icon {
    transform: scale(1.15);
}

.contact-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    transition: width 0.3s ease;
}

.contact-link:hover {
    color: var(--text-primary);
}

.contact-link:hover::after {
    width: 100%;
}

.footer {
    text-align: center;
    padding: 60px;
    font-size: 14px;
    color: var(--text-secondary);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
}

@media (max-width: 768px) {
    nav {
        padding: 20px 30px;
    }

    .nav-menu {
        gap: 20px;
        font-size: 12px;
    }

    .hero, .about-section, .projects-section, .contact-section {
        padding: 80px 30px;
    }

    .about-text {
        margin-bottom: 40px;
    }

    .project-card {
        padding: 40px 30px;
    }

    body {
        cursor: auto;
    }

    .cursor, .cursor-follower {
        display: none;
    }
}


